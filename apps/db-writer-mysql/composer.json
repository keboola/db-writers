{
    "name": "keboola/db-writer-mysql",
    "license": "MIT",
    "type": "project",
    "description": "Keboola MySQL DB Writer",
    "keywords": ["keboola", "mysql", "db", "writer"],
    "authors": [
        {
            "name": "Erik Zigo",
            "email": "erik.zigo@keboola.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-PDO": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "keboola/csv": "dev-ondra-php82-for-v3",
        "keboola/db-writer-adapter": "dev-ondra-init-adapter",
        "keboola/db-writer-common": "dev-ondra-refactoring",
        "keboola/db-writer-config": "dev-ondra-init-config",
        "keboola/php-component": "^9.4",
        "keboola/php-temp": "^2.0",
        "keboola/retry": "^0.5.1",
        "symfony/config": "^6.3",
        "symfony/filesystem": "^6.3",
        "symfony/process": "^5.4"
    },
    "require-dev": {
        "keboola/coding-standard": "^15.0",
        "keboola/datadir-tests": "^5.6",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\DbWriter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbWriter\\FunctionalTests\\": "tests/functional/",
            "Keboola\\DbWriter\\Tests\\": "tests/phpunit/"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests-datadir": "phpunit tests/functional",
        "tests": [
            "@tests-phpunit",
            "@tests-datadir"
        ],
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phpstan": "phpstan analyse ./src ./tests --level=0 --no-progress",
        "generate-ssh-keys": "source ./vendor/keboola/db-writer-common/tests/generate-ssh-keys.sh",
        "build": [
            "@phpstan",
            "@phpcs",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
