{
  "name": "keboola/db-writer-common",
  "license": "MIT",
  "type": "project",
  "description": "Keboola Database Writer Common Library",
  "keywords": ["keboola", "database", "db", "writer", "library"],
  "authors": [
    {
      "name": "Miroslav Cillik",
      "email": "miro@keboola.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-PDO": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "keboola/csv": "^1.1",
    "keboola/ssh-tunnel": "^1.0",
    "monolog/monolog": "^1.17",
    "pimple/pimple": "^3.0",
    "symfony/config": "^4.0",
    "symfony/filesystem": "^4.3",
    "symfony/process": "^3.0 || ^4.0"
  },
  "require-dev": {
    "keboola/coding-standard": "^2.0",
    "squizlabs/php_codesniffer": "^3.0",
    "phpstan/phpstan-shim": "^0.9.2",
    "phpunit/phpunit": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Keboola\\DbWriter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Keboola\\DbWriter\\Tests\\": "tests/phpunit/"
    }
  },
  "scripts": {
    "tests": "phpunit",
    "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
    "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
    "phpstan": "phpstan analyse ./src ./tests --level=0 --no-progress",
    "build": [
      "@phpstan",
      "@phpcs",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-publish --no-check-all",
      "@build"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
