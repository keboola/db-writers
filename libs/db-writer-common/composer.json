{
  "name": "keboola/db-writer-common",
  "license": "MIT",
  "type": "library",
  "description": "Keboola Database Writer Common Library",
  "keywords": ["keboola", "database", "db", "writer", "library"],
  "authors": [
    {
      "name": "Keboola",
      "email": "devel@keboola.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-pdo": "*",
    "keboola/db-writer-adapter": "dev-ondra-init-adapter",
    "keboola/db-writer-config": "dev-ondra-init-config",
    "keboola/php-component": "^9.4",
    "keboola/retry": "^0.5.1",
    "keboola/ssh-tunnel": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Keboola\\DbWriter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Keboola\\DbWriter\\Tests\\": "tests/phpunit/"
    }
  },
  "scripts": {
    "tests-phpunit": "phpunit",
    "tests": [
      "@tests-phpunit"
    ],
    "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
    "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
    "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
    "build": [
      "@phpstan",
      "@phpcs",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-publish --no-check-all",
      "@build"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer":  true
    }
  }
}
